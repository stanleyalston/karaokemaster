<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @singer.name %>
</p>

<p>
  <b>Description:</b>
  <%= @singer.description %>
</p>

<table>
	<tr>
		<th>Tag</th>
		<th>Title</th>
	</tr>
	
	<% @singer.songs.each do |song|%>
	<tr>
		<td><%= link_to song.tag, edit_singer_song_path(@singer, song)%></td>
		<td><%= song.title %></td>
	</tr>
	<% end %>	
</table>
<br/>

<%= link_to 'New Song for Singer', new_singer_song_path(@singer) %> |
<%= link_to 'Edit', edit_singer_path(@singer) %> |
<%= link_to 'Back', singers_path %>
