<h1>Listing songs</h1>

<table>
  <tr>
    <th>Song no</th>
    <th>Name</th>
    <th>Description</th>
    <th>Singer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.song_no %></td>
    <td><%= song.name %></td>
    <td><%= song.description %></td>
    <td><%= song.singer_id %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

